#to make a simple calculator- Menu driven program
def add(x,y):
    return x+y
def substract(x,y):
    return x-y
def multiply(x,y):
    return x*y
def divide(x,y):
    return x/y
ch='y'
while ch=='y':
    print("Select operation:")
    print("1:ADD")
    print("2:Substract")
    print("3:Multiply")
    print("4:Divide")
    choice= int(input("Enter the chice from 1-4:"))
    num1= int(input("Enter the first num"))
    num2= int(input("Enter the first num"))
    if choice==1:
        print("the sum is ",add(num1,num2))
    elif choice==2:
        print("the substraction is ",substract(num1,num2))
    elif choice==3:
        print("the multiplication is ",multiply(num1,num2))
    elif choice==4:
        print("the division is ",divide(num1,num2))
    else:
        print("invalid choice")
    ch=input("do you want to roll again- y/n")
