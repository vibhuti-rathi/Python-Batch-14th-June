#dice rolling
import random
start =input("press enter to roll the dice")

def dice():
    di=random.randint(1,6)
    return di

print("the number on the dice is ",dice())

while True:
    roll_again= input("do you want to roll again- y/n")
    if roll_again== "y":
        print("the number on the dice is ",dice())
    else:
        print("thanks for playing")
        break

